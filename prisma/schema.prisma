generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum MembershipRole {
  OWNER
  ADMIN
  MEMBER
}

model User {
  id            String            @id @default(uuid())
  email         String            @unique
  username      String?           @unique
  passwordHash  String
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  memberships   RoomMembership[]
  messages      Message[]
  refreshTokens RefreshToken[]

  // added opposite relation for Room.createdBy
  createdRooms  Room[]            @relation("UserCreatedRooms")
}

model Room {
  id          String            @id @default(uuid())
  name        String
  slug        String            @unique
  isPrivate   Boolean           @default(false)
  createdById String
  // name the relation to match User.createdRooms
  createdBy   User              @relation("UserCreatedRooms", fields: [createdById], references: [id], onDelete: Cascade)
  createdAt   DateTime          @default(now())

  memberships RoomMembership[]
  messages    Message[]

  @@index([createdAt])
  @@unique([name])
}

model RoomMembership {
  id       String         @id @default(uuid())
  roomId   String
  userId   String
  role     MembershipRole @default(MEMBER)
  joinedAt DateTime       @default(now())

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([roomId, userId])
  @@index([userId])
  @@index([roomId])
}

model Message {
  id              Int      @id @default(autoincrement())
  roomId          String
  userId          String
  clientMessageId String?  // client-generated UUID for idempotency
  content         String
  contentType     String?  @default("text")
  metadata        Json?
  createdAt       DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@unique([userId, clientMessageId], name: "uniq_user_client_msgid")
  @@index([roomId, createdAt, id], name: "idx_room_createdAt_id")
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
