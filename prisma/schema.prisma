generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String           @id @default(uuid())
  email         String           @unique
  username      String?          @unique
  passwordHash  String
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  messages      Message[]
  refreshTokens RefreshToken[]
  createdRooms  Room[]           @relation("UserCreatedRooms")
  memberships   RoomMembership[]
}

model Room {
  id          String           @id @default(uuid())
  name        String           @unique
  slug        String           @unique
  isPrivate   Boolean          @default(false)
  createdById String
  createdAt   DateTime         @default(now())
  messages    Message[]
  createdBy   User             @relation("UserCreatedRooms", fields: [createdById], references: [id], onDelete: Cascade)
  memberships RoomMembership[]

  @@index([createdAt])
}

model RoomMembership {
  id       String         @id @default(uuid())
  roomId   String
  userId   String
  role     MembershipRole @default(MEMBER)
  joinedAt DateTime       @default(now())
  room     Room           @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user     User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([roomId, userId])
  @@index([userId])
  @@index([roomId])
}

model Message {
  id              Int      @id @default(autoincrement())
  roomId          String
  userId          String
  clientMessageId String?
  content         String
  contentType     String?  @default("text")
  metadata        Json?
  createdAt       DateTime @default(now())
  room            Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, clientMessageId], name: "uniq_user_client_msgid")
  @@index([roomId, createdAt, id], map: "idx_room_createdAt_id")
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum MembershipRole {
  OWNER
  ADMIN
  MEMBER
}